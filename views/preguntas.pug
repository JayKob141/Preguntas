extends layout

block content
  #index-banner.section.no-pad-bot
    .container
        .row.center
          h5.header.col.s12.light Contesta preguntas.
        |
        .row.center
          a#download-button.btn-large.waves-effect.waves-light.teal.lighten-1(href='#') Crear pregunta
        |
        br
        br
  .container
    .section
        .row
          for pregunta in preguntas
            .col.s12.m6.l4
                .card
                    .card-image
                      img(src=pregunta.imgurl)
                    |
                    .card-content
                      span.card-title.activator.grey-text.text-darken-4=pregunta.pregunta
                      |
                      p
                        | a) Opcion 1.
                        | b) Opcion 2.
                        | c) Opcion 3.
                    |
                    .card-action
                      a(href='#') Contestar
    br
    br
    br
    br
    br
