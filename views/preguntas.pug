extends layout

block content
  #index-banner.section.no-pad-bot
    .container
        .row.center
          h5.header.col.s12.light Contesta preguntas.
        |
        .row.center
          a#download-button.btn-large.waves-effect.waves-light.teal.lighten-1(href='#') Crear pregunta
        |
        br
        br
  .container
    .section
        .row
          each pregunta in preguntas
            .col.s12.m6.l4
                .card
                    .card-image
                      img(src='http://materializecss.com/images/office.jpg')
                    |
                    .card-content
                      span.right.grey-text.text-darken-4 by #{pregunta.Usuario.nickname}
                      span.card-title.activator.grey-text.text-darken-4=pregunta.pregunta
                      |
                      ol(type='1')
                        each opcion in pregunta.OpcionesPreguntas
                          li #{opcion.descripcion}
                    |
                    .card-action
                      a(href='#') Contestar
    br
    br
    br
    br
    br
