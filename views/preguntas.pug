extends layout

block content
  #modalFeedbackOpcionPregunta.modal
     .modal-content
       h4 Contestando pregunta 
       |     
       p#texto-feedback 
     .modal-footer
          a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') OK 
  //- TODO: COLOCAR EL BOTON DE LOGUEO JUNTO CON EL DE SIGNUP.
  #index-banner.section.no-pad-bot
    .container
      if authed
        .row.center
            h5.header.col.s12.light Contesta preguntas.
        |
        .row.center
            a#download-button.btn-large.waves-effect.waves-light.teal.lighten-1(href='/preguntas/create') Crear pregunta
        |
      else
        .row.center
            h5.header.col.s12.light Registrate para realizar/contestar preguntas.
        |
        .row.center
          a#download-button.btn-large.waves-effect.waves-light.teal.lighten-1(href='/signup') Registrate
        |
        br
        br
  .container
    .section
        .row
          each pregunta in preguntas
            .col.s12.m6.l4
                .card
                    .card-image
                      img(src='http://materializecss.com/images/office.jpg')
                    |
                    .card-content
                      span.right.grey-text.text-darken-4
                        | by 
                        a(href=`users/`+pregunta.Usuario.idUsuario) #{pregunta.Usuario.nickname}
                      span.card-title.activator.grey-text.text-darken-4=pregunta.pregunta
                    |
                    .card-action
                      ol(type='1')
                        each opcion in pregunta.OpcionesPreguntas
                           li
                              a.boton-opcion-pregunta(href='#', data-correcta=opcion.esCorrecta) #{opcion.descripcion}
    br
    br
    br
    br
    br
    script(src="/js/preguntas/index.js")
